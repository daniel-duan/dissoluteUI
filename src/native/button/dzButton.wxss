@keyframes dz-rippleB {
    from {
        transform: scale(0.1);
        opacity: 0.5;
    }
    to {
        transform: scale(2.5);
        opacity: 0;
    }
}

@-webkit-keyframes dz-rippleB-hold {
    from {
        transform: scale(0.1);
        opacity: 0.5;
    }
    to {
        transform: scale(2.5);
        opacity: 0.5;
    }
}

.dz-rippleB-animation-slow-hold {
    animation: dz-rippleB-hold 1s ease-out;
    animation-fill-mode: forwards;
}

.dz-button {
    position: relative;
    width: 100%;
    height: 90px;
    display: flex;
    justify-content: center;
    align-items: center;
    border: none;
    border-radius: 12px;
    box-sizing: border-box;
    overflow: hidden;
    color: white;
    text-decoration: none;
    white-space: nowrap;
    touch-action: manipulation;
    zoom: 1;
    user-select: none;
    outline: 0;
    transition: all .2s cubic-bezier(.4, 0, .2, 1);
    will-change: box-shadow;
    background-color: #E50014;
}

.dz-button::after {
    border: none;
    z-index: 10;
}

.dz-ripple {
    position: absolute;
    left: 20px;
    top: 20px;
    border-radius: 100%;
    background-color: rgb(255, 255, 255);
    width: 10px;
    height: 10px;
}

.dz-rippleB-animation-slow {
    animation: dz-rippleB 0.6s ease-out;
    animation-fill-mode: forwards;
}
