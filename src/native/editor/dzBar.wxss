@import "./assets/iconfont.wxss";

.dz-ed-act {
    color: #22C704;
}

.iconfont {
    display: inline-block;
    width: 60px;
    height: 60px;
    cursor: pointer;
    font-size: 40px;
    box-sizing: border-box;
}

.iconfont::before {
    position: relative;
    left: 10px;
    top: 10px;
}

.dz-toolbar {
    position: fixed;
    left: 0;
    right: 0;
    padding: 0 20px;
    height: 80px;
    bottom: 0;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: 1px solid #f5f5f5;
    background-color: white;
}
