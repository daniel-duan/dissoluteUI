.dz-master-swiper {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    height: auto;
}

.dz-swiper-ann {
    perspective: 1200px;
}

.dz-swiper-item {
    position: absolute;
    left: 5px;
    right: 5px;
    top: 40px;
    bottom: 60px;
    background-color: white;
    border-radius: 45px;
    transition-property: transform;
    transform-style: preserve-3d;
    overflow: hidden;
}

.mas-load-box {
    position: relative;
    height: 160px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.mas-dot {
    position: relative;
    width: 30px;
    height: 30px;
    border-radius: 100%;
    animation: mas-slide 1s infinite;
}

.mas-dot:nth-child(1) {
    left: -10px;
    animation-delay: 0.1s;
    background: #32aacc;
}

.mas-dot:nth-child(2) {
    animation-delay: 0.2s;
    background: #64aacc;
}

.mas-dot:nth-child(3) {
    left: 10px;
    animation-delay: 0.3s;
    background: #96aacc;
}

@keyframes mas-slide {
    0% {
        transform: scale(1);
    }
    50% {
        opacity: 0.3;
        transform: scale(2);
    }
    100% {
        transform: scale(1);
    }
}

.mas-avatar {
    position: relative;
    height: 300px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.mas-head {
    position: relative;
    height: 240px;
    width: 240px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 100%;
}

.mas-head::before {
    content: ' ';
    position: absolute;
    width: 100%;
    height: 100%;
    top: 12px;
    left: 12px;
    z-index: -1;
    display: block;
    background: inherit;
    filter: blur(16px);
    opacity: 0.5;
    transform-origin: 0 0;
    border-radius: inherit;
    transform: scale(1, 1);
}

.mas-desc {
    position: absolute;
    left: 20px;
    right: 20px;
    top: 320px;
    bottom: 30px;
    color: #666666;
    overflow: hidden;
    white-space: pre-wrap;
}

.mas-desc::after {
    content: " ";
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 60px;
    background-image: linear-gradient(transparent, #ffffff);
}

.mas-btn-group {
    position: absolute;
    left: 36px;
    right: 30px;
    bottom: 20px;
    height: 80px;
    display: flex;
    align-items: center;
}

.slide-back {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    margin: 0;
    padding: 0;
    z-index: -1;
}
